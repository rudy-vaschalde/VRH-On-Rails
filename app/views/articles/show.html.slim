.container-fluid.content
  .col-md-9.col-lg-10
    = image_tag @article.article_image.url(:original), class: 'article-img'
    h2 = @article.title
    small
      i.glyphicon.glyphicon-calendar
      => @article.created_at.to_formatted_s(:short)
    .article-content = @article.content.html_safe
  .col-md-3.col-lg-2
    h3.headline Derni√®res news
    - @featured.each do |ft_Article|
      figure.featured-thumb
        .link-overlay
          .image-holder
            = image_tag ft_Article.article_image.url(:thumb), class: "article-thumb"
            .title-overlay
              h4 = ft_Article.title
          = link_to "Voir plus", ft_Article, class: "btn btn-primary btn-lg"

  - if user_signed_in?
    = link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning'
    = link_to 'Back', articles_path, class: 'btn btn-primary'
