= bootstrap_form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      h2 = "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      ul
        - @article.errors.full_messages.each do |message|
          li = message

  = f.text_field :title
  = f.cktext_area :content, :ckeditor => {:language => 'fr'}, rows: 50
  = f.file_field :article_image
  = f.submit
