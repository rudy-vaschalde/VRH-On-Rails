.container-fluid.content
  .media
    .media-left.media-middle
      = image_tag @player.photo.url(:medium)
    .media-body
      h2
        => @player.full_name
        => image_tag @player.team.logo.url(:thumb)
      h3.headline
        strong NumÃ©ro:
        => @player.jersey
      h3.headline
        strong Surnom:
        => @player.surname
      h3.headline
        strong Taille:
        => @player.height
      h3.headline
        strong Poids:
        => @player.weight

  - if user_signed_in?
    => link_to 'Edit', edit_player_path(@player), class: 'btn btn-warning'
    => link_to 'Back', players_path, class: 'btn btn-primary'
